<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context="com.gmonetix.slambook.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/llSettings1"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_settings_slambook"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:text="Slam Book"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSettings2"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_below="@+id/llSettings1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_info"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_settings_version"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Version 1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_below="@+id/llSettings2"
            android:background="@drawable/button_xml"
            android:id="@+id/ll_settings_change_password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_write"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/tv_settings_change_password"
                android:textColor="@color/black"
                android:text="Change Password"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll_settings_change_password"
            android:layout_margin="16dp"
            android:background="@drawable/button_xml"
            android:id="@+id/ll_settings_delete_account"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/tv_settings_delete_account"
                android:textColor="@color/black"
                android:text="Delete Account"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <ImageView
        android:id="@+id/footer1"
        android:src="@drawable/footer1"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/fab_slam1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/fab_home" />

</RelativeLayout>
