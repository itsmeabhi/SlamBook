<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FF8943"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic_search"
            android:layout_margin="10dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar_profile_pic_search" />


    </FrameLayout>


    <TextView
        android:id="@+id/name_search"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email_search"
        android:layout_below="@+id/name_search"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_margin="8dp"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description_search"
        android:layout_below="@+id/email_search"
        android:textSize="15sp"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_margin="8dp"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>