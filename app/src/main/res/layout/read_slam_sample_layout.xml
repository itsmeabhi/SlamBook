<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frame_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/read_slam_profile_image"
            android:layout_margin="8dp"
            android:src="@drawable/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>

        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read_slam_profile_image_progrss_bar" />

    </FrameLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/read_slam_username_tv"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="username"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/read_slam_name_tv"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="Name"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/read_slam_updated_on_tv"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="Updated On"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>